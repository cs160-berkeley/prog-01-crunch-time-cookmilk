<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cookmilk.crunchtime.CrunchTime"
    android:clickable="false">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Type of Exercise:"
            android:id="@+id/textView"
            android:layout_column="0"
            android:layout_gravity="center|right"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="20dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_column="2"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Reps/Minutes:"
            android:id="@+id/textView2"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="20dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_column="2"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Total Calories Butned"
            android:id="@+id/textView3"
            android:layout_column="26"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textColor="#0b0eb8"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText7"
            android:layout_column="36"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Equivalent To"
            android:id="@+id/textView4"
            android:layout_column="46"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pushup:"
            android:id="@+id/textView5"
            android:layout_column="47"
            android:layout_gravity="right"
            android:textSize="20dp"
            android:textColor="#71048c" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:layout_column="48"
            android:textStyle="italic"
            android:textColor="#71048c" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Situp:"
            android:id="@+id/textView6"
            android:layout_column="47"
            android:layout_gravity="right"
            android:textSize="20dp"
            android:textColor="#035815" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:layout_column="48"
            android:textStyle="italic"
            android:textColor="#035815" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Jumping Jacks:"
            android:id="@+id/textView7"
            android:layout_column="47"
            android:layout_gravity="right"
            android:textSize="20dp"
            android:textColor="#c44607" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText5"
            android:layout_column="48"
            android:textStyle="italic"
            android:textColor="#c44607" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Jogging:"
            android:id="@+id/textView8"
            android:layout_column="47"
            android:layout_gravity="right"
            android:textSize="20dp"
            android:textColor="#033a61" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText6"
            android:layout_column="48"
            android:textStyle="italic"
            android:textColor="#033a61" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CONVERT"
            android:id="@+id/button"
            android:layout_column="47"
            android:layout_weight="1"
            android:textStyle="bold" />
    </TableRow>

</TableLayout>
